<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Blogs</title>
  <link rel="stylesheet" href="/static/css/styles.css">
</head>
<body>
  <div class="container">
    <div class="topbar">
      <h1 class="title">Published Blogs</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/blogs/new">Create new</a>
        <a href="/blogs/my-blogs">My blogs</a>
      </nav>
    </div>

    <section id="blogs" class="blog-list">Loading...</section>

  <script>
    async function load() {
      try {
        const headers = {};
        const token = localStorage.getItem('token');
        if (token) headers['Authorization'] = 'Bearer ' + token;
        const res = await fetch('/api/blogs', { headers });
        if (!res.ok) throw new Error('Failed to load blogs');
        const data = await res.json();
        const container = document.getElementById('blogs');
        if (!data.blogs || data.blogs.length === 0) {
          container.innerHTML = '<p>No published blogs found.</p>';
          return;
        }
        // expose current user id from server-side (available via viewAuth middleware)
  const currentUserId = "<%= currentUser ? currentUser.id : '' %>";
        container.innerHTML = data.blogs.map(b => {
          const authorId = b.author && (b.author._id || b.author.id || '');
          const isOwner = currentUserId && authorId && String(currentUserId) === String(authorId);
          return `
          <article>
            <h2><a href="/blogs/${b._id}">${b.title}</a></h2>
            <p>${b.description || ''}</p>
            <small>By: ${b.author?.first_name || ''} ${b.author?.last_name || ''} â€” ${new Date(b.timestamp).toLocaleString()}</small>
            ${isOwner ? `<div><a href="/blogs/${b._id}/edit">Edit</a></div>` : ''}
          </article>
          `;
        }).join('');
      } catch (err) {
        document.getElementById('blogs').textContent = err.message;
      }
    }
    load();
  </script>
</body>
</html>
